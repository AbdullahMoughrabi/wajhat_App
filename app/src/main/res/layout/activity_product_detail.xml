<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProductDetail">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_img_product"
                android:layout_width="match_parent"
                android:layout_height="325dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_product_detail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="35dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_product_detial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:src="@drawable/candle_vanilla"
                        tools:ignore="ImageContrastCheck" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_of_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topBar_products"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/background_of_topbar"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/menu_btn_detail"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:background="@color/green_topbar"
            android:importantForAccessibility="no"
            android:padding="0dp"
            android:src="@drawable/open_menu_6208"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/add_to_cart_btn_detail"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:background="@color/green_topbar"
            android:importantForAccessibility="no"
            android:src="@drawable/black_shopping_cart_10933"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/profile_btn_detail"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@color/green_topbar"
            android:importantForAccessibility="no"
            android:src="@drawable/user_3294"
            app:layout_constraintBottom_toBottomOf="@+id/add_to_cart_btn_detail"
            app:layout_constraintStart_toEndOf="@+id/add_to_cart_btn_detail"
            app:layout_constraintTop_toTopOf="@+id/add_to_cart_btn_detail"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/search_btn_detail"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@color/green_topbar"
            android:importantForAccessibility="no"
            android:src="@drawable/search_2907"
            app:layout_constraintBottom_toBottomOf="@+id/profile_btn_detail"
            app:layout_constraintStart_toEndOf="@+id/profile_btn_detail"
            app:layout_constraintTop_toTopOf="@+id/profile_btn_detail"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>